<Window x:Class="SimpleSteamSwitcher.AccountDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Account Details" 
        Height="500" 
        Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        MinHeight="400"
        MinWidth="500">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Account Details" 
                   FontSize="18" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"
                   Foreground="#2196F3"/>
        
        <!-- Details Content -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto" 
                      HorizontalScrollBarVisibility="Auto">
            <TextBox x:Name="DetailsTextBox"
                     Text="{Binding DetailsText}"
                     IsReadOnly="True"
                     TextWrapping="Wrap"
                     FontFamily="Consolas"
                     FontSize="12"
                     Background="#F5F5F5"
                     BorderBrush="#CCCCCC"
                     Padding="15"
                     AcceptsReturn="True"
                     VerticalAlignment="Stretch"
                     HorizontalAlignment="Stretch"/>
        </ScrollViewer>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,20,0,0">
            <Button Content="Copy All" 
                    Command="{Binding CopyAllCommand}"
                    Padding="15,8"
                    MinWidth="80"
                    Margin="0,0,10,0"
                    Background="#2196F3"
                    Foreground="White"
                    BorderThickness="0"
                    FontWeight="SemiBold"/>
            <Button Content="Close" 
                    Command="{Binding CloseCommand}"
                    Padding="15,8"
                    MinWidth="80"
                    Background="#757575"
                    Foreground="White"
                    BorderThickness="0"
                    FontWeight="SemiBold"/>
        </StackPanel>
    </Grid>
</Window> 