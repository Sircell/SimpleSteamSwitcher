<Window x:Class="SimpleSteamSwitcher.ApiKeyInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Steam Web API Key" 
        Height="350" 
        Width="500"
        WindowStartupLocation="CenterOwner"
        WindowStyle="SingleBorderWindow"
        ResizeMode="NoResize"
        Background="#2b2b2b">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="Steam Web API Key Required" 
                   FontSize="18" 
                   FontWeight="Bold" 
                   Foreground="White" 
                   Margin="0,0,0,15"/>

        <TextBlock x:Name="CurrentKeyText"
                   Grid.Row="1"
                   Text="Checking for saved API key..."
                   FontSize="12"
                   Foreground="#81C784"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,10"/>
        
        <TextBlock Grid.Row="2" 
                   TextWrapping="Wrap" 
                   Foreground="#cccccc" 
                   Margin="0,0,0,15">
            <Run Text="To display game count information, you need a Steam Web API key."/>
            <LineBreak/>
            <LineBreak/>
            <Run Text="1. Go to: "/>
            <Hyperlink NavigateUri="https://steamcommunity.com/dev/apikey" 
                       RequestNavigate="Hyperlink_RequestNavigate"
                       Foreground="#4CAF50">
                <Run Text="https://steamcommunity.com/dev/apikey"/>
            </Hyperlink>
            <LineBreak/>
            <Run Text="2. Sign in with your Steam account"/>
            <LineBreak/>
            <Run Text="3. Fill in 'localhost' for Domain Name"/>
            <LineBreak/>
            <Run Text="4. Copy your API key and paste it below"/>
        </TextBlock>

        <TextBlock Grid.Row="3" 
                   Text="API Key:" 
                   Foreground="White" 
                   Margin="0,0,0,5"/>
        
        <TextBox Grid.Row="4" 
                 x:Name="ApiKeyTextBox"
                 Height="30" 
                 Padding="8"
                 Background="#3a3a3a" 
                 Foreground="White" 
                 BorderBrush="#555555"
                 BorderThickness="1"
                 FontFamily="Consolas"
                 FontSize="12"
                 Margin="0,0,0,10"/>

        <CheckBox Grid.Row="5"
                  x:Name="SaveApiKeyCheckBox"
                  Content="Save API key securely for future use"
                  Foreground="White"
                  IsChecked="True"
                  Margin="0,0,0,15"/>

        <StackPanel Grid.Row="6" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="Cancel" 
                    Width="80" 
                    Height="30" 
                    Margin="0,0,10,0"
                    Background="#555555" 
                    Foreground="White" 
                    BorderBrush="#777777"
                    Click="Cancel_Click"/>
            <Button Content="OK" 
                    Width="80" 
                    Height="30"
                    Background="#4CAF50" 
                    Foreground="White" 
                    BorderBrush="#45a049"
                    Click="OK_Click"/>
        </StackPanel>
    </Grid>
</Window> 